{
  "name": "@artischocke/localiser",
  "version": "3.0.4",
  "description": "A set of localisation utilities primarily for React applications",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.(ts|js)\"",
    "lint": "eslint --ext .ts,.js src/",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artischockee/localiser.git"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "artischocke",
    "localiser",
    "l10n",
    "localisation",
    "localization"
  ],
  "author": "Artem Piskarev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/artischockee/localiser/issues"
  },
  "homepage": "https://github.com/artischockee/localiser#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.2",
    "@testing-library/react": "10.4.7",
    "@types/jest": "26.0.7",
    "@types/react": "16.9.46",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "3.7.1",
    "codecov": "^3.7.2",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-react": "7.20.6",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.13",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-dom": ">=16.13.1",
    "ts-jest": "26.1.3",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "react": "16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
