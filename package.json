{
  "name": "@artischocke/localiser",
  "version": "3.0.5-0",
  "description": "A set of localisation utilities primarily for React applications",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.(ts|js)\"",
    "lint": "eslint --ext .ts,.js src/",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artischockee/localiser.git"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "artischocke",
    "localiser",
    "l10n",
    "localisation",
    "localization"
  ],
  "author": {
    "name": "Artem Piskarev",
    "email": "artyeug@gmail.com",
    "url": "https://artischocke.io/"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/artischockee/localiser/issues"
  },
  "homepage": "https://github.com/artischockee/localiser#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@types/jest": "26.0.22",
    "@types/react": "17.0.3",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "codecov": "^3.7.2",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "~7.23.1",
    "husky": "~4.3.8",
    "jest": "26.6.3",
    "lint-staged": "~10.5.4",
    "prettier": "2.2.1",
    "ts-jest": "26.5.4",
    "typescript": "~4.2.3"
  },
  "peerDependencies": {
    "react": "~17.0.2"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
