{
  "name": "@artischocke/localiser",
  "version": "1.0.0-unstable",
  "description": "A set of localisation utilities primarily for React applications",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --config jestconfig.json",
    "test:watch": "jest --config jestconfig.json --watch",
    "format": "prettier --write \"src/**/*.(ts|js)\"",
    "lint": "eslint --ext .ts,.js src/",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artischockee/localiser.git"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "artischocke",
    "localiser",
    "l10n",
    "localisation",
    "localization"
  ],
  "author": "Artem Piskarev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/artischockee/localiser/issues"
  },
  "homepage": "https://github.com/artischockee/localiser#readme",
  "devDependencies": {
    "@types/jest": "26.0.7",
    "@typescript-eslint/parser": "3.7.1",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "jest": "26.1.0",
    "prettier": "2.0.5",
    "ts-jest": "26.1.3",
    "typescript": "^3.9.7"
  }
}
